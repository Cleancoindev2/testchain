#!/usr/bin/env bash

HOST="127.0.0.1"

function write_json
{
  if [ -z "$1" ]; then
    echo "No output file passed. Use write_json path/to/file.json"
    exit 1
  fi

  echo "Publishing output into $1"
  cat > $1 <<- EOM
{
  "ETH_FROM": "$ETH_FROM",
  "GEM": "$SAI_GEM",
  "GOV": "$SAI_GOV",
  "PIP": "$SAI_PIP",
  "PEP": "$SAI_PEP",
  "PIT": "$SAI_PIT",
  "ADM": "$SAI_ADM",
  "SAI": "$SAI_SAI",
  "SIN": "$SAI_SIN",
  "SKR": "$SAI_SKR",
  "DAD": "$SAI_DAD",
  "MOM": "$SAI_MOM",
  "VOX": "$SAI_VOX",
  "TUB": "$SAI_TUB",
  "TAP": "$SAI_TAP",
  "TOP": "$SAI_TOP",
  "MAKER_OTC": "$OTC",
  "PROXY_REGISTRY": "$PROXY_REGISTRY",
  "DS_PROXY": "$DS_PROXY",
  "SAI_PROXY": "$SAI_PROXY",
  "OASIS_PROXY": "$OASIS_PROXY"
}
EOM
}

function write_json_mcd
{
  if [ -z "$1" ]; then
    echo "No output file passed. Use write_json path/to/file.json"
    exit 1
  fi

  echo "Publishing output into $1"
  cat > $1 <<- EOM
{
  "DGX": "$DGX",
  "ETH_FROM": "$ETH_FROM",
  "MCD_ADM": "$MCD_ADM",
  "MCD_CAT": "$MCD_CAT",
  "MCD_CDP_MANAGER": "$MCD_CDP_MANAGER",
  "MCD_DAI": "$MCD_DAI",
  "MCD_DAI_GUARD": "$MCD_DAI_GUARD",
  "MCD_DEPLOY": "$MCD_DEPLOY",
  "MCD_FLAP": "$MCD_FLAP",
  "MCD_FLIP_DGX": "$MCD_FLIP_DGX",
  "MCD_FLIP_ETH": "$MCD_FLIP_ETH",
  "MCD_FLIP_REP": "$MCD_FLIP_REP",
  "MCD_FLOP": "$MCD_FLOP",
  "MCD_GOV": "$MCD_GOV",
  "MCD_JOIN_DAI": "$MCD_JOIN_DAI",
  "MCD_JOIN_DGX": "$MCD_JOIN_DGX",
  "MCD_JOIN_ETH": "$MCD_JOIN_ETH",
  "MCD_JOIN_REP": "$MCD_JOIN_REP",
  "MCD_JUG": "$MCD_JUG",
  "MCD_MOM": "$MCD_MOM",
  "MCD_MOM_LIB": "$MCD_MOM_LIB",
  "MCD_MOVE_DAI": "$MCD_MOVE_DAI",
  "MCD_MOVE_DGX": "$MCD_MOVE_DGX",
  "MCD_MOVE_ETH": "$MCD_MOVE_ETH",
  "MCD_MOVE_REP": "$MCD_MOVE_REP",
  "MCD_POT": "$MCD_POT",
  "MCD_PROXY_ACTIONS": "$MCD_PROXY_ACTIONS",
  "MCD_SPOT": "$MCD_SPOT",
  "MCD_VAT": "$MCD_VAT",
  "MCD_VOW": "$MCD_VOW",
  "PIP_DGX": "$PIP_DGX",
  "PIP_ETH": "$PIP_ETH",
  "PIP_REP": "$PIP_REP",
  "REP": "$REP"
}
EOM

}
